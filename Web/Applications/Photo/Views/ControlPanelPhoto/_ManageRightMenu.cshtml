<div class="tnc-rightvar tn-open">
    <div class="tnc-settings-icon" plugin="ShortcutMenu">
        <a href="#"></a>
    </div>
    <div id="ManageUserRightMenu">
        <div class="tnc-settings">
            @Html.AjaxAction("_ManageableDataDetail", "ControlPanel", new { area = "Common", applicationKey = PhotoConfig.Instance().ApplicationKey })
            <div class="tn-box tn-widget tn-widget-content tn-corner-all tnc-settings-list">
                <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
                    <h3 class="tn-helper-reset">
                        便捷操作</h3>
                </div>
                <div class="tn-box-content tn-widget-content tn-corner-bottom">
                    <ul class="tn-side-menu tnc-operation">
                        <li class="tn-border-dashed tn-border-gray tn-border-bottom"><a href="@SiteUrls.Instance().PhotoControlPanelManage()"><span class="tn-icon tn-smallicon-slide-next" title="照片管理"></span>照片管理</a> </li>
                        <li class="tn-border-dashed tn-border-gray tn-border-bottom"><a href="@SiteUrls.Instance().AlbumControlPanelManage()"><span class="tn-icon tn-smallicon-slide-next" title="相册管理"></span>相册管理</a> </li>
                        <li class="tn-border-dashed tn-border-gray tn-border-bottom"><a href="@SiteUrls.Instance().ManageTags(TenantTypeIds.Instance().Photo())"><span class="tn-icon tn-smallicon-slide-next" title="标签管理"></span>标签管理</a> </li>
                    </ul>
                </div>
            </div>
            @Html.AjaxAction("_StatisticDataDetail", "ControlPanel", new { area = "Common", applicationKey = PhotoConfig.Instance().ApplicationKey })
        </div>
    </div>
</div>