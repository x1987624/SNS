    <div class="tn-box-content tn-widget-content tn-corner-bottom">
        <ul class="tn-avatar-list tnc-person-flow tn-helper-clearfix">
            @foreach (var user in Model)
            {
                <li class="tn-avatar-item">
                    <a href="@SiteUrls.Instance().SpaceHome(user.UserId)" target="_blank">
                        @Html.ShowUserAvatar(user.UserId, AvatarSizeType.Small, false, navigateTarget: HyperLinkTarget._blank, isShowUserCard: true)</a>
                    <a  class="tn-user-name" href="@SiteUrls.Instance().SpaceHome(user.UserId)" title="@user.DisplayName" target="_blank">@user.DisplayName</a>
                </li> 
            }
        </ul>
