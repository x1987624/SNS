@model List<IUser>
@{
    Layout = null;
}
<div class="tn-box tn-widget tn-widget-content tn-corner-all spb-popularity-users"
    id="popularUsersDiv">
    <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
        @*<div class="tn-option">
            @Html.Link("更多", SiteUrls.Instance().FindUserRanking(SortBy_User.HitTimes), "更多")
        </div>*@
        <h3 class="tn-helper-reset">模块贡献者</h3>
        @*<div class="spb-rec-btn" style="float: right">
            <a href="@SiteUrls.Instance()._ManageRecommendItems(RecommentTypeIds.Instance().HotUser())" class="tn-button tn-corner-all tn-button-default tn-button-icon-only" title="推荐管理" plugin="dialog">
                <span class="tn-icon tn-icon tn-icon-set"></span><span class="tn-button-text">推荐管理</span>
            </a>
        </div>*@
