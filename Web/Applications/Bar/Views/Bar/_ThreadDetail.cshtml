@Html.ScriptBlock(@<script type="text/javascript" language="javascript">
                       $(document).ready(function () {

                           $("#EditPostLink").click(function(e){
                               e.preventDefault();
                               $("<form Method='GET' action='"
                                   +$(this).attr("href")
                                   +"'><input name='threadId' value='"
                                   +@barThread.ThreadId
