                               if (!$replies.children().length) {
                                   $.get($linkA.attr("href"), function (data) {
                                       $replies.html(data);
                                   });
                               } else {
                                   $replies.slideToggle("fast");
                               }
                           });
                       });



                       //评论提交失败的回调函数
                       function postOnErrorCallBack(data) {
                           if (!data.MessageContent) {
                               data = $.parseJSON(data);
                           }
                           alert(data.MessageContent);
                       }
</script>)
