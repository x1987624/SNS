@model IEnumerable<AskQuestion>
@if (Model != null && Model.Count() > 0)
{
    <div class="tn-box tn-widget tn-widget-content tn-corner-all spb-ask-reward">
        <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
            <p class="tn-option"><a href="@SiteUrls.Instance().AskQuestions("HighReward")">更多</a></p>
            <h3 class="tn-helper-reset">高分悬赏</h3>
        </div>
        <div class="tn-box-content tn-widget-content tn-corner-bottom">
            <div class="spb-ask-reward-wrap">
                <ul class="tn-list tn-icon-list">
                    @foreach (AskQuestion question in Model)
                    {
                        <li><span class="tn-icon tn-icon-coins" title="悬赏值"></span><em class="tn-count tn-text-note">@question.Reward</em><a href="@SiteUrls.Instance().AskQuestionDetail(question.QuestionId)" title="@question.Subject" target="_blank">@question.Subject</a> </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}
