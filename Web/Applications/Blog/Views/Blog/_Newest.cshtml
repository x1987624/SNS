@model PagingDataSet<BlogThread>
    <div class="tn-box tn-widget tn-widget-content tn-corner-all spb-blog-new">
        <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
        <h3 class="tn-helper-reset">最新日志</h3>
        </div>
        <div class="tn-box-content tn-widget-content tn-corner-bottom">
        <ul class="tn-list">
        @foreach(BlogThread blogThread in Model)
        {
            <li> <a href="@SiteUrls.Instance().BlogDetail(Url.SpaceKey(), blogThread.ThreadId)">@blogThread.Subject</a> <em class=" tn-text-note tn-date">@blogThread.DateCreated.ToUserDateString()</em> </li>
        }
        </ul>
        </div>
    </div>