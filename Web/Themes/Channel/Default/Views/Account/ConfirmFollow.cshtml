@model ConfirmFollowViewModel
@{
    Layout = "_Account";
}
<div class="tn-box tn-widget tn-widget-content tn-corner-all tnc-activation">
    <div class="tn-box-content tn-widget-content tn-corner-all">
        <div class="tnc-activation-wrapper">
            <div class="tnc-activation-icon">
                <span class="tn-icon-large tn-largeicon-accept-circle"></span>
            </div>
            <div class="tnc-adcivation-box">
                <h4>接受 @Model.FollowUserName 的邀请</h4>
                <p class="tnc-activation-text">与 @Model.FollowUserName 相互关注</p>
                @Html.Button("确定", ButtonTypes.Link, HighlightStyles.Primary, ButtonSizes.Large, url: SiteUrls.Instance().ConfirmFollow(Model.Token, Model.invite, true), htmlAttributes: new { id = "confirm-button-yes" })
                @Html.Button("取消", ButtonTypes.Link, HighlightStyles.Default, ButtonSizes.Large, url: SiteUrls.Instance().ConfirmFollow(Model.Token, Model.invite, false), htmlAttributes: new { id = "confirm-button-No" })
            </div>
        </div>
    </div>
</div>
@Html.ScriptBlock(@<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("a[id^='confirm-button']").click(function (e) {
            e.preventDefault();
            $("<form></form>").attr("action", $(this).attr("href")).attr("method", "post").appendTo("body").submit();
        });
    });
</script>)
