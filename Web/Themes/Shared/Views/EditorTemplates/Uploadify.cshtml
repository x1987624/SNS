@{
    string name = ViewData.Get<string>("name", string.Empty);
    string options = ViewData.Get<string>("options", string.Empty);
}
<div id="@name" data="@options">
</div>
@Html.Script("~/Bundle/Scripts/Uploadify")
@Html.ScriptBlock(@<script type="text/javascript">
    $(document).ready(function () {
        var options = $.parseJSON($('#@name').attr("data"));
        $('#@name').uploadify(options);
    });
</script>)
