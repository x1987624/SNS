<!DOCTYPE html>
<html>
@using (Html.BeginHead())
{
    @Styles.Render("~/Bundle/Styles/Site")
    @Html.RenderStyles() 
    @Scripts.Render("~/Bundle/Scripts/jQuery")
}
<body id="@Html.GenerateBodyId()" class="tn-page-bg spb-layout-3-13 spb-message-page">
    <div id="tn-doc" class="tn-doc-bg">
        <div id="tn-header" class="tn-header-bg">
            <div class="tn-wrapper">
                @Html.Action("_Header", "UserSpace", new { spaceKey = Url.SpaceKey(), Area = "Common" })
                <div class="spb-po-my-profile">
                    <div class="spb-po-my-profile-wrap tn-helper-clearfix">
                        @Html.Action("_MyHomeUserInfo","UserSpace", new { spaceKey = Url.SpaceKey(),Area="Common" })
                        @Html.Action("_SelectMenu", "UserSpace", new { spaceKey = Url.SpaceKey(), Area = "Common" })
                    </div>
                </div>
            </div>
        </div>
        <div id="tn-content" class="tn-content-bg">
            <div class="tn-wrapper">
                <div class="tn-grid-3-13">
                    <div class="tn-unit tn-first">
                        <div class="tnc-aside">
                            @RenderSection("Aside")
                        </div>
                    </div>
                    <div class="tn-unit">
                        <div class="tnc-main">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="tn-footer" class="tn-footer-bg">
            <div class="tn-wrapper">
                @Html.Action("_Footer", "UserSpace", new { spaceKey = Url.SpaceKey(), area = "Common" })
            </div>
        </div>
    </div>
    @Scripts.Render("~/Bundle/Scripts/Site")
    @RenderSection("Scripts", false)
    @Html.RenderScripts()
    @Html.RenderScriptBlocks()
</body>
</html>
