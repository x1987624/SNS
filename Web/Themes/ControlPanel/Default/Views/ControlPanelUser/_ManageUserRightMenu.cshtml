@model Dictionary<UserManageableCountType, int>

    <div class="tnc-settings">
        <div class="tnc-settings-num">
            <span>有<a href="@(SiteUrls.Instance().SeachUser(false, null, null))">@(Model[UserManageableCountType.IsActivated])</a>个用户等待激活</span>
            <span>有<a href="@(SiteUrls.Instance().SeachUser(null, true, null))">@(Model[UserManageableCountType.IsBanned])</a>个用户被封禁</span>
            <span>有<a href="@(SiteUrls.Instance().SeachUser(null, null, true))">@(Model[UserManageableCountType.IsModerated])</a>个用户被管制</span>
        </div>
        <div class="tn-box tn-widget tn-widget-content tn-corner-all tnc-settings-list">
            <div class="tn-box-header tn-widget-header tn-corner-top tn-border-bottom">
                <h3 class="tn-helper-reset">
                    数据统计</h3>
            </div>
            <div class="tn-box-content tn-widget-content tn-corner-bottom">
                <ul class="tn-side-menu tnc-operation">
                    <li>总用户数：@(Model[UserManageableCountType.IsAll])</li>
                    <li>24小时新增：@(Model[UserManageableCountType.IsLast24])</li>
                </ul>
            </div>
        </div>
    </div>


